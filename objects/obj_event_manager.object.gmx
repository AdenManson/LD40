            <string>/// Choose Event

if(!global.paused) {

randomize();
    event = choose(events.lightning,
               events.lightning,
               events.disease,
               events.disease,
               events.wolves,
               events.wolves,
               events.flood,
               events.snow);
               
if(event == lastEvent) {
    randomize();
    event = choose(events.lightning,
               events.lightning,
               events.disease,
               events.disease,
               events.wolves,
               events.wolves,
               events.flood,
               events.snow);
}

lastEvent = event;
               
if(event == events.lightning) {
    randomize();
    if(global.sheepAmount &lt; 6) amount = 1;
    if(global.sheepAmount &gt;= 6) amount = 2;
    if(global.sheepAmount &gt; 10) &amp;&amp; (global.sheepAmount &lt; 20) amount = irandom_range(3,5);
    if(global.sheepAmount &gt;= 20) amount = irandom_range(3,5);
    
    repeat(amount) {
        instance_create(irandom_range(50,room_width-50), irandom_range(50,room_height-5), obj_lightning_marker);
    }


}

if(event == events.disease) {
    if(!instance_exists(obj_sheep)) {
        exit;
    }
    
    if(global.sheepAmount &lt; 6) amount = 1;
    if(global.sheepAmount &gt;= 6) amount = 2;
    if(global.sheepAmount &gt; 10) &amp;&amp; (global.sheepAmount &lt; 20) amount = irandom_range(3,5);
    if(global.sheepAmount &gt;= 20) amount = irandom_range(2,4);
    
    if(instance_exists(obj_sheep)) {
        repeat(amount) {
            var inst = instance_find(obj_sheep,irandom(instance_number(obj_sheep)));
            if(instance_exists(inst)) { 
                if(!inst.diseased) {
                    inst.diseased = true;
                } else { 
                    var inst = instance_find(obj_sheep,irandom(instance_number(obj_sheep)));
                    if(instance_exists(inst)) { 
                        if(!inst.diseased) {
                            inst.diseased = true;
                        }
                    }
                }
            }
        }
    }
}

if(event == events.snow) {
    if(!instance_exists(obj_snow_ps)) instance_create(0,0,obj_snow_ps);
}

if(event == events.wolves) {
    if(global.sheepAmount &lt; 6) amount = 1;
    if(global.sheepAmount &gt;= 6) amount = 2;
    if(global.sheepAmount &gt; 10) &amp;&amp; (global.sheepAmount &lt; 20) amount = irandom_range(3,5);
    if(global.sheepAmount &gt;= 20) amount = irandom_range(3,4);
    
    
    repeat(amount) { instance_create(-100,-100,obj_wolf); }
}

if(event == events.flood) {
    instance_create(room_width/2,0,obj_boat_back);
    instance_create(room_width/2,0,obj_waves);
    instance_create(0,0,obj_rain_ps);
}
if(pause &gt; 460) pause -= 30;
alarm[0] = pause;

debug(event);
} else {
